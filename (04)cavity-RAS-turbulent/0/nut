FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

//A range of wall function models is available in OpenFOAM that are applied as boundary conditions on individual patches. This enables different wall function models to be applied to different wall regions.

dimensions      [0 2 -1 0 0 0 0]; //units: [m^2/s]

internalField   uniform 0;

boundaryField
{
    movingWall
    {
        //"nutWallFunction is a standard wall function". Other wall function models include the rough wall functions, specified though the nutRoughWallFunction keyword. 
        type            nutkWallFunction;
        value           uniform 0;
    }
    fixedWalls
    {
        type            nutkWallFunction;
        value           uniform 0;
    }
    frontAndBack
    {
        type            empty;
    }
}


// ************************************************************************* //
